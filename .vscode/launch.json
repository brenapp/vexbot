  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Bot",
      "program": "${workspaceFolder}\\src\\main.ts",
      "preLaunchTask": "npm: build",
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "env": {
        "DEV": "true"
      }
    }
  ]
}
